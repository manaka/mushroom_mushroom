<p id="notice"><%= notice %></p>

<h1>Mushrooms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Edible</th>
      <th>Cap shape</th>
      <th>Cap surface</th>
      <th>Cap color</th>
      <th>Bruises</th>
      <th>Odor</th>
      <th>Gill attachment</th>
      <th>Gill spacing</th>
      <th>Gill size</th>
      <th>Gill color</th>
      <th>Stalk shape</th>
      <th>Stalk root</th>
      <th>Stalk surface above ring</th>
      <th>Stalk surface below ring</th>
      <th>Stalk color above ring</th>
      <th>Stalk color below ring</th>
      <th>Veil type</th>
      <th>Veil color</th>
      <th>Ring number</th>
      <th>Ring type</th>
      <th>Spore print color</th>
      <th>Population</th>
      <th>Habitat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mushrooms.each do |mushroom| %>
      <tr>
        <td><%= mushroom.name %></td>
        <td><%= mushroom.edible %></td>
        <td><%= mushroom.cap_shape_id %></td>
        <td><%= mushroom.cap_surface_id %></td>
        <td><%= mushroom.cap_color_id %></td>
        <td><%= mushroom.bruises %></td>
        <td><%= mushroom.odor_id %></td>
        <td><%= mushroom.gill_attachment_id %></td>
        <td><%= mushroom.gill_spacing_id %></td>
        <td><%= mushroom.gill_size_id %></td>
        <td><%= mushroom.gill_color_id %></td>
        <td><%= mushroom.stalk_shape_id %></td>
        <td><%= mushroom.stalk_root_id %></td>
        <td><%= mushroom.stalk_surface_above_ring_id %></td>
        <td><%= mushroom.stalk_surface_below_ring_id %></td>
        <td><%= mushroom.stalk_color_above_ring_id %></td>
        <td><%= mushroom.stalk_color_below_ring_id %></td>
        <td><%= mushroom.veil_type_id %></td>
        <td><%= mushroom.veil_color_id %></td>
        <td><%= mushroom.ring_number_id %></td>
        <td><%= mushroom.ring_type_id %></td>
        <td><%= mushroom.spore_print_color_id %></td>
        <td><%= mushroom.population_id %></td>
        <td><%= mushroom.habitat_id %></td>
        <td><%= link_to 'Show', mushroom %></td>
        <td><%= link_to 'Edit', edit_mushroom_path(mushroom) %></td>
        <td><%= link_to 'Destroy', mushroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

